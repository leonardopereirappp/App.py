#:import utils kivy.utils
<ListarVendedoresPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        ### Lista de Vendedores
        ScrollView:
            pos_hint: {'right': 1, 'top': 0.9}
            size_hint: 1,0.76
            GridLayout:
                cols: 1
                id: lista_vendedores
                size_hint_y: None
                spacing: 2,5
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True


    ### Aqui Ã© a navbar que fica na parte de baixo ( tipo o footer do HTML )
    FloatLayout:
        pos_hint: {"right": 1, "top": 0.14}
        size_hint: 1, 0.14
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#006D7E")
            Rectangle:
                size: self.size
                pos: self.pos
        ImageButton:
            pos_hint: {"right": 0.2, "top": 0.9}
            size_hint: 0.2, 0.8
            source: "icones/voltar.png"
            on_release: app.mudar_tela("homepage")
