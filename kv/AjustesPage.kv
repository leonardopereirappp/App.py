#:import utils kivy.utils

<AjustesPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao_fino.png"
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: "Seu ID único: 1"
            id: id_vendedor




        ### Mudar foto de perfil
        ImageButton:
            pos_hint: {"right": 0.5, "top": 0.75}
            size_hint: 0.5, 0.15
            source: "icones/foto_perfil.png"
            on_release: app.mudar_tela("fotoperfilpage")
        LabelButton:
            pos_hint: {"right": 0.9, "top": 0.75}
            size_hint: 0.5, 0.15
            text: "Mudar foto de perfil"
            on_release: app.mudar_tela("fotoperfilpage")




        ### Adicionar vendedor
        ImageButton:
            pos_hint: {"right": 0.5, "top": 0.55}
            size_hint: 0.5, 0.15
            source: "icones/adicionar_vendedor.png"
            on_release: app.mudar_tela("adicionarvendedorespage")
        LabelButton:
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.5, 0.15
            text: "Acompanhar vendedor"
            on_release: app.mudar_tela("adicionarvendedorespage")







        ### Ver todas as vendas
        ImageButton:
            pos_hint: {"right": 0.5, "top": 0.35}
            size_hint: 0.5, 0.15
            source: "icones/vendas_empresa.png"
            on_release: app.carregar_todas_vendas()
        LabelButton:
            pos_hint: {"right": 0.9, "top": 0.35}
            size_hint: 0.5, 0.15
            text: "Acompanhar Vendas"
            on_release: app.carregar_todas_vendas()






        ### Aqui é a navbar que fica na parte de baixo ( tipo o footer do HTML )
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.14}
            size_hint: 1, 0.14
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage")