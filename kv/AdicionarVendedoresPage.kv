#:import utils kivy.utils
<AdicionarVendedoresPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        Label:
            pos_hint: {"right": 0.9, "top": 0.8}
            size_hint: 0.8, 0.1
            bold: True
            text: "Insira o [color=#00CFDB]ID de outro vendedor[/color] para acompanha-lo"
            markup: True

        ### o textinput ta fazendo o botão mudar de cor na sequencia: textinput/labelbutton, então só troquei a ordem

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.add_vendedor(input_id_vendedor.text)
            text: "Adicionar vendedor"
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.2

        TextInput:
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
            hint_text: "123"
            id: input_id_vendedor

        Label:
            text: ""
            markup: True
            bold: True
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1
            id: mensagem_add_vendedor

    ### Aqui é a navbar que fica na parte de baixo ( tipo o footer do HTML )
    FloatLayout:
        pos_hint: {"right": 1, "top": 0.14}
        size_hint: 1, 0.14
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#006D7E")
            Rectangle:
                size: self.size
                pos: self.pos
        ImageButton:
            pos_hint: {"right": 0.2, "top": 0.9}
            size_hint: 0.2, 0.8
            source: "icones/voltar.png"
            on_release: app.mudar_tela("ajustespage")
